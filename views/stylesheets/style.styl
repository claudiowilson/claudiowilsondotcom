@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,300,700')
@import url('https://fonts.googleapis.com/css?family=Montserrat')
@import url('https://fonts.googleapis.com/css?family=Signika:400,700')

body
	font-family 'Open Sans', sans-serif
	font-weight 300

.content
	margin-top 16em
	margin-left 30em
	float left

.container
	border-style solid
	border-width 2px

.content .container
	overflow hidden
	opacity 0.5

.container:hover
	opacity 1

.node:hover
	cursor pointer
	opacity 0.5

#sidebar
	font-family 'Signika', sans-serif
	margin-left 12em
	margin-top 5em
	position fixed
	float left

#sidebar ul
	padding 0

#sidebar li
	font-size 1.25em
	list-style-type none
	margin-top 10px

a, a:link
	text-decoration none
	color #000

#sidebar a:hover
	font-weight 700

#sidebar a:visited
	color #000

#header
	font-family 'Montserrat', sans-serif
	font-weight 700
	font-size 1.75em

#background
	position fixed
	z-index -2

#artistName
	font-size small

#album
	float left
	border-style solid
	border-width 2px

#albumAdd
	margin-top 10px

.container 
	background-color white
	padding 10px

#albumSelection
	overflow hidden
	margin-top 20px
	display none

#albums
	border-radius 2.5px
	-moz-border-radius 2.5px
	-webkit-border-radius 2.5px
	width 150px
	height 20px

.ui-autocomplete
	font-family 'Open Sans', sans-serif

.ui-autocomplete img
	float left

.ui-autocomplete span
	margin-left 5px

.ui-autocomplete-loading
	background white url('../images/ui-anim_basic_16x16.gif') right center no-repeat;

.blur-on
	filter url(#blur)

